<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Learning  Infrastructures</title>
    <!-- Bootstrap CSS -->
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .card {
            transition: transform 0.2s;
            margin: auto;
            width: 50%;
        }
        .card-img-top {
            height: 300px;
            object-fit: contain; /* Change object-fit property */
            object-position: center top;
        }
        .audio-player {
            width: 100%;
        }
        .next-button,
        .prev-button {
            margin-top: 20px;
        }
        .go-back-button {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="mb-4 text-center">Learning Infrastructures </h1>
        <div id="flashcardContainer" class="text-center">
            {{#each entries}}
            <div class="card flashcard {{#unless @first}}d-none{{/unless}}" data-index="{{@index}}">
                <img src="{{image}}" class="card-img-top" alt="Entry Image">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">{{description}}</p>
                    <audio controls class="audio-player">
                        <source src="{{audio}}" type="audio/mp3">
                        Your browser does not support the audio element.
                    </audio>
                </div>
            </div>
            {{/each}}
        </div>
        <div class="row">
            <div class="col text-left">
                <button id="prevButton" class="btn btn-secondary prev-button">Previous</button>
            </div>
            <div class="col text-right">
                <button id="nextButton" class="btn btn-primary next-button">Next</button>
            </div>
        </div>
        <div class="text-center">
            <button id="goBackButton" class="btn btn-info go-back-button">Go Back to Categories</button>
        </div>
    </div>
    <!-- Bootstrap JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            let currentIndex = 0;
            const flashcards = document.querySelectorAll('.flashcard');
            const nextButton = document.getElementById('nextButton');
            const prevButton = document.getElementById('prevButton');
            const goBackButton = document.getElementById('goBackButton');

            const showNextFlashcard = () => {
                flashcards[currentIndex].classList.add('d-none');
                currentIndex = (currentIndex + 1) % flashcards.length;
                flashcards[currentIndex].classList.remove('d-none');
            };

            const showPrevFlashcard = () => {
                flashcards[currentIndex].classList.add('d-none');
                currentIndex = (currentIndex - 1 + flashcards.length) % flashcards.length;
                flashcards[currentIndex].classList.remove('d-none');
            };

            document.addEventListener('keydown', (event) => {
                if (event.key === 'Enter') {
                    showNextFlashcard();
                }
            });

            nextButton.addEventListener('click', () => {
                showNextFlashcard();
            });

            prevButton.addEventListener('click', () => {
                showPrevFlashcard();
            });

            goBackButton.addEventListener('click', () => {
                window.location.href = '/learningOfferedEng'; // Change the URL as needed
            });
        });
    </script>
</body>
</html>
